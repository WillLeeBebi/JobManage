@{
    Layout = null;
}
<!DOCTYPE html>
<html style="overflow:hidden;">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Job管理平台</title>
    <link href="~/res/global/css/font.css" rel="stylesheet" />
    <link href="~/res/plugins/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/res/global/css/theme.css" rel="stylesheet" />
    <script src="~/res/plugins/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/res/plugins/bootstrap/bootstrap.js"></script>
    <script src="~/res/plugins/dialog/dialog.js"></script>
    <script src="~/res/plugins/jquery/jquery.cookie.js"></script>
    <script src="~/res/global/js/job.js"></script>
</head>
<body style="overflow:hidden;">
    <!--ajax加载中时显示的图片-->
    <div id="ajax-loader" style="cursor: progress; position: fixed; top: -50%; left: -50%; width: 200%; height: 200%; background: #fff; z-index: 10000; overflow: hidden;">
        <img src="~/res/global/img/ajax-loader.gif" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; margin: auto;" />
    </div>
    <div id="theme-wrapper">
        <!--头部导航栏开始-->
        <header id="header-navbar" class="navbar">
            <div class="container" style="padding-right:0px;">
                <a href="#" id="logo" class="navbar-brand">Job管理平台</a>
                <div class="clearfix">
                    <div class="nav-no-collapse navbar-left pull-left hidden-sm hidden-xs">
                        <ul class="nav navbar-nav pull-left">
                            <li>
                                <a class="btn" id="make-small-nav"><i class="fa fa-bars"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="nav-no-collapse pull-right" id="header-nav">
                        <ul class="nav navbar-nav pull-right">                           
                            <li class="dropdown profile-dropdown">
                                <a href="#" class="dropdown" data-toggle="dropdown">
                                    <img src="~/res/global/img/user-avatar.png" alt="" />
                                    <span id="adminName" class="hidden-xs"></span>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a class="menuItem" data-id="userInfo" href="#"><i class="fa fa-user"></i>个人信息</a></li>
                                    <li><a href="javascript:void(0);"><i class="fa fa-inbox"></i>我的信箱</a></li>
                                    <li><a href="javascript:void(0);" onclick="layer.msg('浏览器缓存清除成功');"><i class="fa fa-trash-o"></i>清空缓存</a></li>
                                    <li><a href="javascript:void(0);"><i class="fa fa-paint-brush"></i>皮肤设置</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#"><i class="ace-icon fa fa-power-off"></i>安全退出</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </header>
        <!--头部导航栏结束-->
        <!--页面内容开始-->
        <div id="page-wrapper" class="container">
            <div class="row">
                <!--左侧菜单开始-->
                <div id="nav-col">
                    <section id="col-left" class="col-left-nano">
                        <div id="col-left-inner" class="col-left-nano-content">
                            <div id="user-left-box" class="clearfix hidden-sm hidden-xs dropdown profile2-dropdown">
                                <img src="~/res/global/img/user-avatar.png" alt="" />
                                <div class="user-box">
                                    <span id="adminInfo" class="name">XXX
                                    </span>
                                    <span class="status">
                                        <i class="fa fa-circle"></i>在线
                                    </span>
                                </div>
                            </div>
                            <div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">
                                <ul id="nav-menu" class="nav nav-pills nav-stacked">
                                    <li class="">
                                        <a data-id="0" href="#" class="dropdown-toggle">
                                            <i class="fa fa-bar-chart-o"></i><span>Job管理</span><i class="fa fa-angle-right drop-icon"></i>
                                        </a>
                                        <ul class="submenu" style="display: none;">
                                            <li><a class="menuItem" data-id="1" href="/Job/Index" data-index="1">Job信息管理</a></li>
                                            <li><a class="menuItem" data-id="2" href="/JobLog/Index" data-index="2">Job日志</a></li>
                                        </ul>
                                    </li>                                    
                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
                <!--左侧菜单结束-->
                <!--中间内容开始-->
                <div id="content-wrapper">
                    <div class="content-tabs">
                        <button class="roll-nav roll-left tabLeft">
                            <i class="fa fa-backward"></i>
                        </button>
                        <nav class="page-tabs menuTabs">
                            <div class="page-tabs-content" style="margin-left: 0px;">
                                <a href="javascript:;" class="menuTab active" data-url="/Home/About" data-id="-2" style="padding-right: 15px;">平台介绍</a>
                                <a href="javascript:;" class="menuTab" data-url="/Job/Index" data-id="1" style="padding-right: 15px;">Job信息管理</a>
                            </div>
                        </nav>
                        <button class="roll-nav roll-right tabRight">
                            <i class="fa fa-forward" style="margin-left: 3px;"></i>
                        </button>
                        <div class="btn-group roll-nav roll-right">
                            <button class="dropdown tabClose" data-toggle="dropdown">
                                页签操作<i class="fa fa-caret-down" style="padding-left: 3px;"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a class="tabReload" href="javascript:void(0);">刷新当前</a></li>
                                <li><a class="tabCloseCurrent" href="javascript:void(0);">关闭当前</a></li>
                                <li><a class="tabCloseAll" href="javascript:void(0);">全部关闭</a></li>
                                <li><a class="tabCloseOther" href="javascript:void(0);">除此之外全部关闭</a></li>
                            </ul>
                        </div>
                        <button class="roll-nav roll-right fullscreen"><i class="fa fa-arrows-alt"></i></button>
                    </div>
                    <div class="content-iframe" style="background-color: #f9f9f9; overflow: hidden;">
                        <div class="mainContent" id="content-main" style="margin: 10px; margin-bottom: 0px; padding: 0;">
                            <iframe class="iframe" style="width:100%;height:100%;" src="/Home/About" frameborder="0" data-url="/Home/About" data-id="-2"></iframe>
                            <iframe class="iframe" style="width:100%;height:100%;" src="/Job/Index" frameborder="0" data-url="/Job/Index" data-id="1"></iframe>
                        </div>
                    </div>
                </div>
                <!--中间内容结束-->
            </div>
        </div>
    </div>
    <!--页面加载时显示的等待状态-->
    <div id="loadingPage" style="display: none;">
        <div class="loading-shade"></div>
        <div class="loading-content" onclick="job.common.loading(false)">数据加载中，请稍候…</div>
    </div>
    <script src="~/res/global/js/index.js"></script>
    <script src="~/res/global/js/tab.js"></script>
</body>
</html>
